@using Luno_platform.Viewmodel
@model filter_coursesviewmodel

@{
    Layout = "~/Views/Shared/_navbar.cshtml";

}

<link rel="stylesheet" href="~/assets/css/style_filtercourses.css">

<div class="">
    <!-- Header -->
    <header class="header">
        <div class="header-content">
            <h1 class="header-title">اكتشف الكورسات المتاحة</h1>
            <p class="header-subtitle">استكشف مجموعتنا من الكورسات المتخصصة المصممة لمساعدتك على النمو</p>
        </div>
    </header>

    <div class="main-wrapper">
        <!-- Sidebar Filter -->
        <aside class="filter-sidebar">
            <div class="filter-header">
                <h2 class="filter-title">الفلاتر</h2>
                @* <span class="course-count" id="courseCount">8 كورس</span> *@
            </div>

            <!-- Search Filter -->
            <div class="filter-group">
                <label class="filter-label">البحث عن كورس</label>
                <div class="search-wrapper">
                    <input type="text"
                           id="searchInput"
                           class="filter-input search-input"
                           placeholder="ابحث باسم الكورس...">
                    <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="m21 21-4.35-4.35"></path>
                    </svg>
                </div>
            </div>

            <!-- Status Filter -->
            <div class="filter-group">
                <label class="filter-label">الحالة</label>
                <div class="checkbox-group">
                    <label class="checkbox-label">
                        <input type="checkbox" class="status-filter" value="نشط" checked>
                        <span>نشط</span>
                    </label>
                    <label class="checkbox-label">
                        <input type="checkbox" class="status-filter" value="قريب">
                        <span>قريب</span>
                    </label>
                    <label class="checkbox-label">
                        <input type="checkbox" class="status-filter" value="مغلق">
                        <span>مغلق</span>
                    </label>
                </div>
            </div>

            <!-- Price Range Filter -->
            <div class="filter-group">
                <label class="filter-label">نطاق السعر</label>
                <div class="price-range">
                    <div class="price-input">
                        <label class="price-label">الحد الأدنى</label>
                        <input type="range"
                               id="minPrice"
                               class="price-slider"
                               min="0"
                               max="1000"
                               value="0">
                        <span class="price-value" id="minPriceValue">0</span>
                    </div>
                    <div class="price-input">
                        <label class="price-label">الحد الأقصى</label>
                        <input type="range"
                               id="maxPrice"
                               class="price-slider"
                               min="0"
                               max="1000"
                               value="1000">
                        <span class="price-value" id="maxPriceValue">1000</span>
                    </div>
                </div>
            </div>

            <!-- Subject Filter -->
            <div class="filter-group">
                <label class="filter-label">المادة</label>
                <select id="subjectFilter" class="filter-select">
                    <option value="">جميع المواد</option>
                    <option value="لغة عربية">لغة عربية</option>
                    <option value="رياضيات">رياضيات</option>
                    <option value="علوم">علوم</option>
                    <option value="إنجليزي">إنجليزي</option>
                </select>
            </div>

            <!-- Level Filter -->
            <div class="filter-group">
                <label class="filter-label">المستوى</label>
                <select id="levelFilter" class="filter-select">
                    <option value="">جميع المستويات</option>
                    <option value="ابتدائي">ابتدائي</option>
                    <option value="إعدادي">إعدادي</option>
                    <option value="ثانوي">ثانوي</option>
                </select>
            </div>

            <!-- Reset Button -->
            <button class="reset-btn" id="resetBtn">مسح جميع الفلاتر</button>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Courses Grid -->
            <div class="courses-grid" id="coursesGrid">
                <!-- Courses will be inserted here by JavaScript -->
            </div>

            <!-- Empty State -->
            <div class="empty-state" id="emptyState" style="display: none;">
                <div class="empty-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm3.5-9c.83 0 1.5-.67 1.5-1.5S16.33 8 15.5 8 14 8.67 14 9.5s.67 1.5 1.5 1.5zm-7 0c.83 0 1.5-.67 1.5-1.5S9.33 8 8.5 8 7 8.67 7 9.5 7.67 11 8.5 11zm3.5 6.5c2.33 0 4.31-1.46 5.11-3.5H6.89c.8 2.04 2.78 3.5 5.11 3.5z"></path>
                    </svg>
                </div>
                <h3 class="empty-title">لم يتم العثور على كورسات</h3>
                <p class="empty-text">حاول تعديل الفلاتر للعثور على ما تبحث عنه</p>
            </div>
        </main>
    </div>
</div>

<script src="~/assets/js/script_filter_course.js"></script>
