@model Luno_platform.Viewmodel.Register_User_Viewmode

@{
    Layout = "~/Views/Shared/_navbar.cshtml";
}

<section class="registration_page1">

    <div class="form-container">
        <h2><b>طلب انشاء حساب :</b></h2>
        <p class="subtitle">
            ادخل بياناتك بشكل صحيح وسيتم التواصل معك خلال ساعات قليلة لتفعيل الحساب!<br>
            يوجد لديك حساب بالفعل؟ <span>
                <a href="" class="subtitle_link_login_as_user">ادخل إلى حسابك الآن!</a>
            </span>
        </p>
        <form asp-action="RegisterStudent" asp-controller="Account" method="post"
              class="grid-form "  >



            <!-- الاسم الأول -->
            <div class="form-group">
                <div style="position: relative;">
                    <input asp-for="Fname" type="text" required placeholder=" ">
                    <label><i class="fa-solid fa-user"></i> الاسم الأول</label>
                    <span class="bg-anim"></span>
                </div>
                <span asp-validation-for="Fname" class="text-danger"></span>
            </div>

            <!-- الاسم الأخير -->
            <div class="form-group">
                <div style="position: relative;">
                    <input asp-for="LastName" type="text" required placeholder=" ">
                    <label><i class="fa-solid fa-user"></i> الاسم الأخير</label>
                    <span class="bg-anim"></span>
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <!-- هاتف الطالب -->
            <div class="form-group full-width">
                <div style="position: relative;">
                    <input asp-for="PhoneNumber" type="tel" id="student-phone" required placeholder=" ">
                    <label><i class="fa-solid fa-phone"></i> هاتف الطالب</label>
                    <span class="bg-anim"></span>
                </div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <!-- رقم هاتف الأب -->
            <div class="form-group">
                <div style="position: relative;">
                    <input asp-for="parentnumber" type="tel" required placeholder=" ">
                    <label><i class="fa-solid fa-phone"></i> رقم هاتف الأب</label>
                    <span class="bg-anim"></span>
                </div>
                <span asp-validation-for="parentnumber" class="text-danger"></span>
            </div>

            <!-- الرقم القومي -->
            <div class="form-group">
                <div style="position: relative;">
                    <input asp-for="NationalID" type="number" required placeholder=" ">
                    <label><i class="fa-solid fa-id-card"></i> الرقم القومي</label>
                    <span class="bg-anim"></span>
                </div>
                <span asp-validation-for="NationalID" class="text-danger"></span>
            </div>

            <!-- النوع -->
            <div class="form-group form-group1" style="margin-bottom: 17px;">
                <select id="gender" required asp-for="Role">
                    <option value="" disabled selected hidden></option>
                    <option value="student">طالب</option>
                    <option value="instructor">مدرس</option>
                    <option value="parent">ولي امر</option>
                </select>
                <label><i class="fa-solid fa-map-location-dot"></i> النوع </label>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <!-- المحافظة -->
            <div class="form-group form-group1">
                <div style="position: relative;">
                    <select id="governorate" asp-for="goverment">
                        <option value="" disabled selected hidden></option>
                    </select>
                    <label><i class="fa-solid fa-map-location-dot"></i> المحافظة</label>
                    <span class="bg-anim"></span>
                </div>
                <span asp-validation-for="goverment" class="text-danger"></span>
            </div>

            <!-- الإدارة -->
            <div class="form-group form-group1 full-width">
                <div style="position: relative;">
                    <select id="admin" asp-for="city">
                        <option value="" disabled selected hidden></option>
                    </select>
                    <label><i class="fa-solid fa-building"></i> الإدارة</label>
                    <span class="bg-anim"></span>
                </div>
                <span asp-validation-for="city" class="text-danger"></span>
            </div>

            <!-- البريد الإلكتروني -->
            <div class="form-group full-width">
                <div style="position: relative;">
                    <input asp-for="Email" type="email" id="email" required placeholder=" ">
                    <label><i class="fa-solid fa-envelope"></i> البريد الإلكتروني</label>
                    <span class="bg-anim"></span>
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- كلمة المرور -->
            <div class="form-group password-group">
                <div style="position: relative;">
                    <input asp-for="Password" type="password" id="password" required placeholder=" ">
                    <label><i class="fa-solid fa-lock"></i> كلمة المرور</label>
                    <span class="bg-anim"></span>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- تأكيد كلمة المرور -->
            <div class="form-group password-group">
                <div style="position: relative;">
                    <input asp-for="ConfirmPassword" type="password" id="confirm-password" required placeholder=" ">
                    <label><i class="fa-solid fa-lock"></i> تأكيد كلمة المرور</label>
                    <span class="bg-anim"></span>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- الصف الدراسي -->
            <div class="alsaf form-group form-group1 full-width">
                <div style="position: relative;">
                    <select id="alsaf" required asp-for="ClassId">
                        <option value="" disabled selected hidden></option>
                        <option value="1">الصف الاول الثانوي</option>
                        <option value="2">الصف الثاني الثانوي</option>
                        <option value="3">الصف الثالث الثانوي</option>
                    </select>
                    <label><i class="fa-solid fa-book"></i> الصف الدراسي </label>
                    <span class="bg-anim"></span>
                </div>
                <span asp-validation-for="ClassId" class="text-danger"></span>
            </div>

            <!-- الشعبة -->
            <div class="shueba form-group form-group1 full-width">
                <div style="position: relative;">
                    <select id="shueba" asp-for="branch">
                        <option value="" disabled selected hidden></option>
                        <option value="science">علمي</option>
                        <option value="arts">أدبي</option>
                        <option value="math">رياضة</option>
                        <option value="science-sc">علمي علوم </option>
                        <option value="science-ma">علمي رياضة</option>
                    </select>
                    <label><i class="fa-solid fa-book"></i> الشعبة</label>
                    <span class="bg-anim"></span>
                </div>
                <span asp-validation-for="branch" class="text-danger"></span>
            </div>

            <!-- زر التسجيل -->
            <button  type="submit">
                <i class="fa-solid fa-user-plus"></i> إنشاء الحساب
            </button>

        </form>




    </div>
</section>