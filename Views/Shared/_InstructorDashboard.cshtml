<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>لوحة تحكم المدرس</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/all.min.css">
    <link rel="stylesheet" href="~/assets/css/dashboard.css">
    <link rel="stylesheet" href="~/assets/css/InstractorHomePage.css">
    <link rel="stylesheet" href="~/assets/css/mainpage.css" />
    <link rel="stylesheet" href="~/assets/css/responsive-fix.css" />
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css" />
    <link rel="shortcut icon" href="~/img/icon.svg" type="image/x-icon" />
    @RenderSection("stylee", false)

    <style>
    </style>
</head>

<body>
    <div class="sidebar" id="sidebar">
        <div class="logo">
            <img src="/assets/imgs/logo.svg" alt="Logo" id="logo" />
            <span>أكاديمية تعليمية</span>
        </div>
        <ul>
            <li>
                <a asp-controller="Instructor" asp-action="Index">
                    <i class="fa-solid fa-house mx-2"></i> <span>الرئيسية</span>
                </a>
            </li>
            @* <li> *@
            @*     <a href="course-details.html"><i class="fa-solid fa-book mx-2"></i> <span>تفاصيل الكورسات </span></a> *@
            @* </li> *@
            <li>
                <a asp-controller="Instructor" asp-action="ReportsCopy">
                    <i class="fa-solid fa-chart-line mx-2"></i> <span>التقارير</span>
                </a>
            </li>
            <li>
                <a asp-controller="Instructor" asp-action="Instructorinvoices">
                    <i class="fa-regular fa-money-bill-1 mx-2"></i> <span>الفواتير</span>
                </a>
            </li>
            <li>
                <a asp-controller="Instructor" asp-action="Settings"><i class="fa-solid fa-gear mx-2"></i> <span>الإعدادات</span></a>
            </li>
            <li>
                <a asp-controller="Homepage" asp-action="mainpage"><i class="fa-solid fa-circle-arrow-left mx-2"></i> <span>الرجوع</span></a>
            </li>
        </ul>
    </div>
    <!-- Overlay -->
    <div class="overlay" id="overlay" onclick="toggleSidebar()"></div>
    <button class="icon-btn d-lg-none" aria-label="فتح القائمة" onclick="toggleSidebar()">
        <i class="fa-solid fa-bars"></i>
    </button>
    @RenderBody()

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/all.min.js"></script>
    <script src="~/assets/js/InstractorHomePage.js"></script>
    <script src="~/assets/js/dashbord.js"></script>
    @RenderSection("Scripts", required: false)

</body>

</html>