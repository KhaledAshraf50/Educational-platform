<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>لوحة التحكم</title>

    <!-- Styles -->
    <link rel="stylesheet" href="~/assets/css/dashboard.css" />
    <link rel="stylesheet" href="~/assets/css/all.min.css" />
    <link rel="stylesheet" href="~/assets/css/adminmainpage.css" />
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css" />
    @RenderSection("Styles", required: false)
    <link rel="stylesheet" href="~/assets/css/responsive-fix.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="shortcut icon" href="~/assets/img/icon.svg" type="image/x-icon" />
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="logo">
            <img src="~/assets/imgs/logo.svg" alt="Logo" id="logo" />
            <span>أكاديمية تعليمية</span>
        </div>
        <ul>
            <li>
                <a asp-controller="Admin" asp-action="MainPage">
                    <i class="fa-solid fa-house mx-2"></i> <span>الرئيسية</span>
                </a>
            </li>
            <li>
                <a asp-controller="Admin" asp-action="Users">
                    <i class="fa-solid fa-user mx-2"></i> <span>إدارة المستخدمين</span>
                </a>
            </li>
            <li>
                <a asp-controller="Admin" asp-action="Courses">
                    <i class="fa-solid fa-book mx-2"></i> <span>إدارة الكورسات</span>
                </a>
            </li>
            <li>
                <a asp-controller="AdminReports" asp-action="Report">
                    <i class="fa-solid fa-chart-line mx-2"></i> <span>التقارير</span>
                </a>
            </li>
            <li>
                <a asp-controller="Admin" asp-action="Payments">
                    <i class="fa-solid fa-receipt mx-2"></i> <span>الفواتير</span>
                </a>
            </li>
            <li>
                <a asp-controller="Admin" asp-action="Setting">
                    <i class="fa-solid fa-gear mx-2"></i> <span>الإعدادات</span>
                </a>
            </li>
            <li>
                <a asp-controller="Homepage" asp-action="mainpage"><i class="fa-solid fa-circle-arrow-left mx-2"></i> <span>الرجوع</span></a>
            </li>
        </ul>
    </div>

    <!-- Overlay -->
    <div class="overlay" id="overlay" onclick="toggleSidebar()"></div>

    <!-- Mobile Menu Button -->
    <button class="icon-btn d-lg-none" aria-label="فتح القائمة" onclick="toggleSidebar()">
        <i class="fa-solid fa-bars"></i>
    </button>

    <!-- Main Content -->
    <div class="content">
        <div class="top-icons">
            <button class="icon-btn" aria-label="الإشعارات"><i class="fa-solid fa-bell"></i></button>
            <button class="icon-btn" aria-label="الملف الشخصي" onclick="window.location.href='#'">
                <i class="fa-solid fa-circle-user"></i>
            </button>
        </div>

        <div>
            @RenderBody()
        </div>
    </div>

    <script src="~/assets/js/all.min.js"></script>
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/dashbord.js"></script>
    <script src="~/assets/js/adminmainpage.js"></script>
    @RenderSection("script", required: false)
</body>
</html>

