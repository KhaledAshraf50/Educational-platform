@{
    Layout = "~/Views/Shared/_navbar.cshtml";
}

<!-- تأكد إن Bootstrap CSS متحمل -->
@* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" /> *@

<link rel="stylesheet" href="~/ahmed_morsi/assets/css/details_courses.css" />

<section class="course-details" style="margin-top: 100px;">
    <div class="container">
        <div class="course-header">
            <img src="~/ahmed_morsi/assets/imgs/mohamedsalahcourse.jpg" alt="صورة الكورس" class="course-image" />
            <div class="course-info">
                <h1 class="course-title">كورس الرياضيات - الصف الثالث الثانوي</h1>
                <p class="course-teacher">المدرس: <span>مستر حسن ممدوح</span></p>
                <p class="course-price"><i class="fa-solid fa-tag"></i> السعر: <span>250 جنيه</span></p>
                <button class="enroll-btn">اشترك الآن</button>
            </div>
        </div>

        <div class="course-description">
            <h2>عن الكورس</h2>
            <p>
                هذا الكورس يهدف إلى تبسيط منهج الرياضيات للصف الثالث الثانوي من خلال شرح سهل ومفصل يغطي جميع الأبواب مع أمثلة تطبيقية وتمارين تفاعلية.
            </p>
        </div>

        <div class="course_content">
            <h1 class="title mb-4">تفاصيل الكورس</h1>

            <div class="accordion" id="accordionLevel1">
                <!-- الأسبوع الأول -->
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseLevel1Week1" aria-expanded="false" aria-controls="collapseLevel1Week1">
                            الأسبوع الأول
                        </button>
                    </h2>
                    <div id="collapseLevel1Week1" class="accordion-collapse collapse" data-bs-parent="#accordionLevel1">
                        <div class="accordion-body">
                            <div class="desc_content">
                                <p>شرح أول درس في النحو: كان وأخواتها</p>
                                <a href="">عرض</a>
                            </div>
                            <div class="desc_content">
                                <p>تمارين على كان وأخواتها</p>
                                <a href="">عرض</a>
                            </div>
                            <div class="desc_content">
                                <p>اختبار الأسبوع الأول</p>
                                <a href="">عرض</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- الأسبوع الثاني -->
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseLevel1Week2" aria-expanded="false" aria-controls="collapseLevel1Week2">
                            الأسبوع الثاني
                        </button>
                    </h2>
                    <div id="collapseLevel1Week2" class="accordion-collapse collapse" data-bs-parent="#accordionLevel1">
                        <div class="accordion-body">
                            <div class="desc_content">
                                <p>شرح درس جديد في النحو</p>
                                <a href="">عرض</a>
                            </div>
                            <div class="desc_content">
                                <p>اختبار على الدرس</p>
                                <a href="">عرض</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
