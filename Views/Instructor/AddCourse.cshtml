@model Luno_platform.Viewmodel.AddCourseVM

@{
    Layout = "_InstructorDashboard";
}

<link rel="stylesheet" href="~/assets/css/details_courses.css" />

<section class="course-details mt-5">
    <div class="container">

        <h1 class="mb-4">إضافة كورس جديد</h1>

        <form asp-action="AddCourse" method="post" enctype="multipart/form-data">

            <!-- Course Name -->
            <div class="mb-3">
                <label class="form-label">اسم الكورس</label>
                <input asp-for="CourseName" class="form-control" />
            </div>

            <!-- Price -->
            <div class="mb-3">
                <label class="form-label">سعر الكورس</label>
                <input asp-for="Price" class="form-control" />
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label class="form-label">وصف الكورس</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            </div>

            <!-- Class Dropdown -->
            <div class="mb-3">
                <label class="form-label">الصف</label>
                <select asp-for="ClassID" asp-items="Model.Classes" class="form-control">
                    <option value="">-- اختر الصف --</option>
                </select>
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>

            <!-- Subject Dropdown -->
            <div class="mb-3">
                <label class="form-label">المادة</label>
                <select asp-for="SubjectId" asp-items="Model.Subjects" class="form-control">
                    <option value="">-- اختر المادة --</option>
                </select>
            </div>

            <!-- Course Image -->
            <div class="mb-3">
                <label class="form-label">صورة الكورس</label>
                <input asp-for="ImageFile" type="file" class="form-control" />
            </div>

            <!-- Course Content -->
            <h3 class="mt-4">محتوى الكورس</h3>

            <div class="mb-3">
                <label class="form-label">اسم الفيديو/الملف 1</label>
                <input asp-for="NameUrl1" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">رابط الفيديو/الملف 1</label>
                <input asp-for="Url1" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">اسم الفيديو/الملف 2</label>
                <input asp-for="NameUrl2" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">رابط الفيديو/الملف 2</label>
                <input asp-for="Url2" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">اسم الفيديو/الملف 3</label>
                <input asp-for="NameUrl3" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">رابط الفيديو/الملف 3</label>
                <input asp-for="Url3" class="form-control" />
            </div>

            <button type="submit" class="btn btn-success mt-3">إضافة الكورس</button>

        </form>
</div>
</section>
