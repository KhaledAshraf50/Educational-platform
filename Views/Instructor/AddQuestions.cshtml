@model Luno_platform.Viewmodel.AddQuestionVM

<link href="~/assets/css/AddQuestion.css" rel="stylesheet" />

<div class="container edit-page">

    <h2 class="page-title">
        ✏️ إضافة أسئلة الامتحان
    </h2>

    <form method="post">
        <input type="hidden" asp-for="ExamId" />

        @for (int i = 0; i < Model.Questions.Count; i++)
        {
            <div class="question-card">

                <div class="card-header">
                    سؤال رقم @(i + 1)
                </div>

                <input asp-for="Questions[@i].QuestionText"
                       class="form-control question-input"
                       placeholder="أكتب نص السؤال هنا" required />

                <div class="row choices">

                    <div class="col-md-6">
                        <input asp-for="Questions[@i].ChooseA"
                               class="form-control"
                               placeholder="A" required />
                    </div>

                    <div class="col-md-6">
                        <input asp-for="Questions[@i].ChooseB"
                               class="form-control"
                               placeholder="B" required />
                    </div>

                    <div class="col-md-6">
                        <input asp-for="Questions[@i].ChooseC"
                               class="form-control"
                               placeholder="C" required />
                    </div>

                    <div class="col-md-6">
                        <input asp-for="Questions[@i].ChooseD"
                               class="form-control"
                               placeholder="D" required />
                    </div>

                </div>

                <select asp-for="Questions[@i].CorrectAnswer"
                        class="form-select correct-answer"
                        required>
                    <option value="">✅ اختر الإجابة الصحيحة</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                </select>

            </div>
        }

        <div class="save-box">
            <button type="submit" class="btn-save">
                💾 حفظ جميع الأسئلة
            </button>
        </div>

    </form>

</div>
