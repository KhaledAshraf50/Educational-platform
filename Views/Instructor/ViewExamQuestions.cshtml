@model List<Luno_platform.Models.Question>

<h3 class="mb-4 text-primary">📝 أسئلة الامتحان</h3>

<div class="list-group">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="list-group-item mb-2 shadow-sm rounded">
            <h5>السؤال @(i + 1): @Model[i].questionText</h5>
            <ul>
                <li>أ: @Model[i].chooseA</li>
                <li>ب: @Model[i].chooseB</li>
                <li>ج: @Model[i].chooseC</li>
                <li>د: @Model[i].chooseD</li>
            </ul>
            <p><strong>الإجابة الصحيحة: @Model[i].correctAnswer</strong></p>
        </div>
    }
</div>

<a href="@Url.Action("Dashboard", "Instructor")" class="btn btn-secondary mt-3">رجوع</a>
