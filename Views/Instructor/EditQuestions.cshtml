@model Luno_platform.Viewmodel.AddQuestionVM



<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/assets/css/edit-questions.css" />

<div class="container questions-page">

    <div class="page-title">
        <h3>✏️ تعديل أسئلة الامتحان</h3>
    </div>

    <form asp-action="EditExam" method="post">
        <input type="hidden" asp-for="ExamId" />

        @for (int i = 0; i < Model.Questions.Count; i++)
        {
            <div class="question-card shadow-sm">

                <div class="q-header">
                    <span>سؤال رقم @(i + 1)</span>
                </div>

                <div class="mb-3">
                    <input asp-for="Questions[i].QuestionText"
                           class="form-control form-control-lg"
                           placeholder="اكتب نص السؤال" />
                </div>

                <div class="row answers">
                    <div class="col-md-6 mb-2">
                        <input asp-for="Questions[i].ChooseA"
                               class="form-control"
                               placeholder="A" />
                    </div>

                    <div class="col-md-6 mb-2">
                        <input asp-for="Questions[i].ChooseB"
                               class="form-control"
                               placeholder="B" />
                    </div>

                    <div class="col-md-6 mb-2">
                        <input asp-for="Questions[i].ChooseC"
                               class="form-control"
                               placeholder="C" />
                    </div>

                    <div class="col-md-6 mb-2">
                        <input asp-for="Questions[i].ChooseD"
                               class="form-control"
                               placeholder="D" />
                    </div>
                </div>

                <div class="correct-answer">
                    <label>✅ الإجابة الصحيحة</label>

                    <select asp-for="Questions[i].CorrectAnswer"
                            class="form-select">
                        <option value="">اختر الإجابة</option>
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                        <option value="D">D</option>
                    </select>
                </div>

            </div>
        }

        <div class="save-wrapper">
            <button type="submit" class="btn-save">
                💾 حفظ التعديلات
            </button>
        </div>
    </form>

</div>
