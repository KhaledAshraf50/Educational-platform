@model Luno_platform.Viewmodel.CreateExamVM

@{
    ViewBag.Title = "إنشاء امتحان جديد";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">

    <h2 class="mb-4 text-center">➕ إنشاء امتحان جديد</h2>

    <div class="card shadow-sm p-4">
        <h5 class="card-title mb-3">معلومات الامتحان</h5>
        <form method="post">

            <div class="mb-3">
                <label class="form-label">اسم الامتحان</label>
                <input asp-for="ExamName" class="form-control" required />
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">الصف الدراسي</label>
                    <select asp-for="ClassId" class="form-control"
                            asp-items="@(ViewBag.Classes as List<SelectListItem>)" required>
                        <option value="">اختر الصف</option>
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">المادة</label>
                    <select asp-for="subjectId" class="form-control"
                            asp-items="@(ViewBag.Subjects as List<SelectListItem>)" required>
                        <option value="">اختر المادة</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label class="form-label">مدة الامتحان (بالدقائق)</label>
                    <input asp-for="Time" type="number" class="form-control" required />
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">عدد الأسئلة</label>
                    <input asp-for="TotalQuestions" type="number" class="form-control" required />
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">درجة الامتحان الكاملة</label>
                    <input asp-for="TotalMarks" type="number" class="form-control" required />
                </div>
            </div>

            <div class="text-center mt-4">
                <button class="btn btn-success btn-lg px-5">التالي: إضافة الأسئلة ➡</button>
            </div>

        </form>
    </div>

</div>

<style>
    body {
        background-color: #f5f5f5;
    }

    .card {
        background-color: #fff;
        border-radius: 12px;
    }

    .form-label {
        font-weight: 500;
    }

    .btn-success {
        background-color: #092c4c;
        border-color: #092c4c;
    }

        .btn-success:hover {
            background-color: #074061;
            border-color: #074061;
        }
</style>
