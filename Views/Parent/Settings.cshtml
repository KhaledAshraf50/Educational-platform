@using Luno_platform.Viewmodel
@model ParentSettingVM
@{
    ViewData["Title"] = "Settings";
    Layout = "_ParentDashboard";
}
@section Styles {
    <link rel="stylesheet" href="~/assets/css/mainpage.css" />
    <link rel="stylesheet" href="~/assets/css/Setting.css" />
}
<div class="Settingspage m-3 " id="Settingspage">
    <!-- الشمال: بروفايل -->
    <div class="settings-card left-profile">
        @if (TempData["ErrorFile"] != null)
        {
            // alert-dismissible → تجعل الرسالة قابلة للإغلاق
            //<button class="btn-close"...> → الزر اللي المستخدم يقدر يدوسه لإخفاء الرسالة
            //fade show → لإضافة تأثير ظهور وخفاء لطيف
            //data-bs-dismiss="alert" → يخلي Bootstrap يتعامل مع الزر ويخفي الرسالة تلقائيًا
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorFile"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["SucessFile"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SucessFile"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <div class="avatar">
            <img src="@Model.Image" alt="avatar" style="width:100px">
        </div>
        <h3>@Model.Name</h3>
        <h2>عدد الابناء المرتبطين: @Model.NoOfChildren</h2>
        <div class="btns">
            <button id="edit-btn" class="btn edit">
                <i class="fa-solid fa-pen"></i> تعديل
                الصورة
                الشخصية
            </button>
            <!-- input مخفي لاختيار الصورة -->
            <form id="imageForm" asp-action="UploadImage" enctype="multipart/form-data" method="post">
                @* <input type="file" name="file" class="btn edit"  hidden/> *@
                <input type="hidden" name="parentId" value="@Model.ParentID" />
                <input type="file" name="file" id="fileInput" hidden />
            </form>
            <form asp-action="DeleteImage" method="post">
                <input type="hidden" name="parentId" value="@Model.ParentID" />
                <button type="submit" class="btn delete">حذف</button>
            </form>
        </div>
    </div>
    <!-- اليمين: محتوى الإعدادات -->
    <section class="settings-card right-content">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Sucess"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Sucess"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        <div class="card-header">
            <h4>إعدادات الحساب</h4>
            <div class="settings-tabs">
                <button class="active">البيانات</button>
                <button>كلمة المرور</button>
                <button>الإشعارات</button>
            </div>
        </div>
        <form class="settings-form active" asp-action="UpdateParentSetting" method="post">
            <input type="hidden" asp-for="ParentID" />

            <div class="form-row">
                <div asp-for="Name" class="form-group">
                    <label class="form-label">الاسم</label>
                    <input asp-for="Name" class="form-control " placeholder="أحمد عبد الناصر">
                </div>
                <div asp-for="NationalId" class="form-group">
                    <label class="form-label">الرقم القومي</label>
                    <input asp-for="NationalId" class="form-control" placeholder="30508251702466">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">البريد الإلكتروني</label>
                    <input asp-for="Email" class="form-control" placeholder="khaled@gmail.com">
                </div>
                <div asp-for="PhoneNumber" class="form-group">
                    <label class="form-label">رقم الهاتف</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="01096541656">
                </div>
            </div>
            <button class="btn-save">حفظ التغييرات</button>
        </form>
        <!-- change password  -->
        <form class="settings-form active" asp-action="ChangePassword" method="post">
            <input type="hidden" asp-for="ParentID" />
            <div class=" form-row">
                <div  class="form-group">
                    <label class="form-label">كلمه المرور الحاليه </label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="current password">
                </div>
                <div class="form-group">
                    <label class="form-label">كلمه المرور الجديده </label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="New password">
                </div>
            </div>
            <button class="btn btn-primary btn-save">حفظ التغييرات</button>
        </form>

        <div class="settings-form">
            <div class="card shadow-sm p-3 mb-4 rounded-3">
                <h5 class="fw-bold mb-3">

                    <img src="/assets/img/logo.svg" alt=""> إعدادات الإشعارات
                </h5>
                <div class="toggle-container">
                    <input type="checkbox" id="notifyAll1" class="toggle-input" checked>
                    <label for="notifyAll1" class="toggle-label"></label>
                    <span class="toggle-text">تفعيل كل الإشعارات</span>
                </div>

                <hr>

                <div class="toggle-container">
                    <input type="checkbox" id="notifyAll2" class="toggle-input" checked>
                    <label for="notifyAll2" class="toggle-label"></label>
                    <span class="toggle-text">إشعار عند إضافة كورسات جديدة</span>
                </div>

                <div class="toggle-container">
                    <input type="checkbox" id="notifyAll3" class="toggle-input" checked>
                    <label for="notifyAll3" class="toggle-label"></label>
                    <span class="toggle-text">إشعار عند إضافة واجبات او امتحانات</span>
                </div>

                <div class="toggle-container">
                    <input type="checkbox" id="notifyAll4" class="toggle-input" checked>
                    <label for="notifyAll4" class="toggle-label"></label>
                    <span class="toggle-text">إشعار عند استلام رسالة جديدة</span>
                </div>

                <hr>

                <div class="toggle-container">
                    <input type="checkbox" id="notifyAll5" class="toggle-input" checked>
                    <label for="notifyAll5" class="toggle-label"></label>
                    <span class="toggle-text">استقبال إشعارات عبر البريد الإلكتروني</span>
                </div>

                <div class="toggle-container">
                    <input type="checkbox" id="notifyAll6" class="toggle-input" checked>
                    <label for="notifyAll6" class="toggle-label"></label>
                    <span class="toggle-text">استقبال إشعارات داخل الموقع فقط</span>
                </div>
            </div>
        </div>
    </section>
</div>
@section script {
    <script>
              setTimeout(() => {
            document.querySelectorAll(".alert").forEach(a => a.remove());
        }, 4000);

    </script>
    <script>
            // افتح اختيار الصورة لما أدوس على تعديل
            document.getElementById("edit-btn").addEventListener("click", function () {
                document.getElementById("fileInput").click();
            });

            // ابعت الفورم تلقائيًا بعد اختيار الصورة
            document.getElementById("fileInput").addEventListener("change", function () {
                if (this.files.length > 0) {
                    document.getElementById("imageForm").submit();
                }
            });
    </script>
        <script src="~/assets/js/Setting.js"></script>
    
}