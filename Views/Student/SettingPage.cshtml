@using Luno_platform.Viewmodel
@model UserSettingsVM
@{
    Layout = "_SideBarDashbord";
}
@section Styles {
    <link rel="stylesheet" href="~/assets/css/Setting.css">
}
<div class="Settingspage m-3 " id="Settingspage">
    <!-- الشمال: بروفايل -->
    <div class="settings-card left-profile">
        <div class="avatar">
            <img src="~/assets/imgs/profile-dark.gif" alt="avatar" class="rounded-circle">
        </div>
        <h3> @Model.Fname @Model.LastName</h3>
        <p>@Model.ClassName — </p>
        <div class="btns">
            <button id="edit-btn" class="btn edit">
                <i class="fa-solid fa-pen"></i> تعديل
                الصورة
                الشخصية
            </button>
            <!-- input مخفي لاختيار الصورة -->
            <input type="file" id="file-input" accept="image/*" style="display:none;">
            <button class="btn delete">حذف</button>
        </div>
    </div>

    <!-- اليمين: محتوى الإعدادات -->
    <section class="settings-card right-content">
        <div class="card-header">
            <h4>إعدادات الحساب</h4>
            <div class="settings-tabs">
                <button class="active">البيانات</button>
                @* <button>كلمة المرور</button> *@
                @* <button>الإشعارات</button> *@
            </div>
        </div>

        <form asp-action="Save" enctype="multipart/form-data">

            <input type="hidden" asp-for="UserId" />

            <div class="form-row">
                <div class="form-group">
                    <label>الاسم الأول</label>
                    <input class="form-control" asp-for="Fname">
                </div>

                <div class="form-group">
                    <label>الاسم الأخير</label>
                    <input class="form-control" asp-for="LastName">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>رقم الهاتف</label>
                    <input class="form-control" asp-for="PhoneNumber">
                </div>
                <div class="form-group">
                    <label>الصف الدراسي</label>
                    <select class="form-control" asp-for="ClassId">
                        @if (Model.ClassName != null)
                        {
                            <option value="@Model.ClassId">@Model.ClassName</option>
                        }
                        else
                        {
                            <option value="">اختر الصف</option>
                        }
                        <option value="1">الأول</option>
                        <option value="2">الثاني</option>
                        <option value="3">الثالث</option>
                    </select>
                </div>

                @* <div class="form-group">
