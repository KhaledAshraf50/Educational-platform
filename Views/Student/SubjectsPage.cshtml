                            <span class="text-primary fw-bold">100%</span>
                            <div class="progress">
                                <div class="progress-bar bg-primary" style="width:100%"></div>
                            </div>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-info">عرض</button>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="btnsNextPre">
                <button class="Previous">السابق</button>
                <button class="Next">التالي</button>
            </div>
        </div>
    </div>
    </div>
@section Script {
    <script src="~/assets/js/Subjects.js"></script>
}