@{
    Layout = "~/Views/Shared/_Sidebar_admin.cshtml";
}
<link rel="stylesheet" href="~/assets/css/dashboardadmin.css" />
<link rel="stylesheet" href="~/assets/css/style.css" />


<div class="col-md-9 col-lg-10 content">
        <h2 class="fw-bold mb-4">إدارة المعاملات</h2>

        <!-- Tabs -->
        <ul class="nav nav-tabs">
          <li class="nav-item">
            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#done">✅ مكتملة</button>
          </li>
          <li class="nav-item">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#pending">⏳ معلقة</button>
          </li>
          <li class="nav-item">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#failed">❌ فاشلة</button>
          </li>
        </ul>

        <!-- Tabs Content -->
        <div class="tab-content">
          <!-- مكتملة -->
          <div class="tab-pane fade show active" id="done">
            <div class="table-container">
              <h5 class="mb-3">المعاملات المكتملة</h5>
              <table class="table table-hover align-middle text-center">
                <thead class="table-success">
                  <tr>
                    <th>المستخدم</th>
                    <th>المبلغ</th>
                    <th>طريقة الدفع</th>
                    <th>التاريخ</th>
                    <th>الحالة</th>
                    <th>التحكم</th>
                  </tr>
                </thead>
                <tbody id="doneTable">
                  <tr>
                    <td>أحمد محمد</td>
                    <td>350 جنيه</td>
                    <td>Visa</td>
                    <td>2024-05-10</td>
                    <td><span class="badge bg-success">مكتملة</span></td>
                    <td><button class="btn btn-sm btn-outline-danger" onclick="deleteRow(this)">حذف</button></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>

          <!-- معلقة -->
          <div class="tab-pane fade" id="pending">
            <div class="table-container">
              <h5 class="mb-3">المعاملات المعلقة</h5>
              <table class="table table-hover align-middle text-center">
                <thead class="table-warning">
                  <tr>
                    <th>المستخدم</th>
                    <th>المبلغ</th>
                    <th>طريقة الدفع</th>
                    <th>التاريخ</th>
                    <th>الحالة</th>
                    <th>التحكم</th>
                  </tr>
                </thead>
                <tbody id="pendingTable">
                  <tr>
                    <td>سارة علي</td>
                    <td>200 جنيه</td>
                    <td>Vodafone Cash</td>
                    <td>2024-05-12</td>
                    <td><span class="badge bg-warning text-dark">معلقة</span></td>
                    <td><button class="btn btn-sm btn-outline-success" onclick="markAsCompleted(this)">تأكيد</button></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>

          <!-- فاشلة -->
          <div class="tab-pane fade" id="failed">
            <div class="table-container">
              <h5 class="mb-3">المعاملات الفاشلة</h5>
              <table class="table table-hover align-middle text-center">
                <thead class="table-danger">
                  <tr>
                    <th>المستخدم</th>
                    <th>المبلغ</th>
                    <th>طريقة الدفع</th>
                    <th>التاريخ</th>
                    <th>السبب</th>
                    <th>التحكم</th>
                  </tr>
                </thead>
                <tbody id="failedTable">
                  <tr>
                    <td>خالد حسن</td>
                    <td>400 جنيه</td>
                    <td>MasterCard</td>
                    <td>2024-04-28</td>
                    <td>رفض من البنك</td>
                    <td><button class="btn btn-sm btn-outline-danger" onclick="deleteRow(this)">حذف</button></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<script src="~/assets/js/dashbordadmin.js"></script>
<script src="~/assets/js/main.js"></script>