@{
    Layout = "~/Views/Shared/_Sidebar_admin.cshtml";
}
<link rel="stylesheet" href="~/assets/css/dashboardadmin.css" />
<link rel="stylesheet" href="~/assets/css/style.css" />
<link rel="stylesheet" href="~/assets/css/Report_style.css" />
<link rel="stylesheet" href="~/assets/css/dashboard-report.css" />


    <div class="page-title">
      <h4 class="mb-0">📊 التقارير والإحصائيات</h4>
    </div>

    <!-- Filter -->
    <div class="filter-container">
      <label for="timeFilter" class="me-2">اختر الفترة الزمنية:</label>
      <select id="timeFilter">
        <option value="today">اليوم</option>
        <option value="yesterday">أمس</option>
        <option value="last2days">أول أمس</option>
        <option value="thisMonth" selected>الشهر الحالي</option>
      </select>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
      <div class="col-md-3">
        <div class="card p-3 text-center">
          <h6>عدد الاشتراكات</h6>
          <h3 class="text-success" id="totalSubscriptions">320</h3>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card p-3 text-center">
          <h6>الكورسات المباعة</h6>
          <h3 class="text-primary" id="totalCoursesSold">45</h3>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card p-3 text-center">
          <h6>إجمالي الإيرادات</h6>
          <h3 class="text-warning" id="totalRevenue">25,400ج</h3>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card p-3 text-center">
          <h6>نسبة الربح</h6>
          <h3 class="text-danger" id="profitRate">68%</h3>
        </div>
      </div>
    </div>

    <!-- Top Teachers Table -->
    <div class="card p-3 mb-4">
      <h6>👨‍🏫 المدرسين الأكثر مبيعاً</h6>
      <div class="table-responsive">
        <table class="table table_Edit text-center align-middle">
          <thead>
            <tr>
              <th>المدرس</th>
              <th>عدد الكورسات المباعة</th>
              <th>إجمالي الإيرادات</th>
            </tr>
          </thead>
          <tbody id="topTeachersTable">
            <tr>
              <td>أحمد سمير</td>
              <td>15</td>
              <td>7,500ج</td>
            </tr>
            <tr>
              <td>سارة خالد</td>
              <td>10</td>
              <td>5,000ج</td>
            </tr>
            <tr>
              <td>محمد عادل</td>
              <td>8</td>
              <td>4,000ج</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Top Courses Table -->
    <div class="card p-3 mb-4">
      <h6>📚 الكورسات الأكثر مبيعاً</h6>
      <div class="table-responsive">
        <table class="table table_Edit text-center align-middle">
          <thead>
            <tr>
              <th>اسم الكورس</th>
              <th>عدد الاشتراكات</th>
              <th>إجمالي الإيرادات</th>
            </tr>
          </thead>
          <tbody id="topCoursesTable">
            <tr>
              <td>Python للمبتدئين</td>
              <td>12</td>
              <td>4,200ج</td>
            </tr>
            <tr>
              <td>ذكاء اصطناعي عملي</td>
              <td>10</td>
              <td>5,000ج</td>
            </tr>
            <tr>
              <td>برمجة الويب</td>
              <td>8</td>
              <td>3,500ج</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

  </div>

    </div>

